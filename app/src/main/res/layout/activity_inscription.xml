<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color"
    tools:context=".InscriptionActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/baseline_arrow_back_24"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Connection"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="Retour"
                    android:backgroundTint="@color/buttun_color"
                    android:padding="0dp"
                    android:textSize="19dp"
                    android:fontFamily="@font/dm_medium"
                    android:textAllCaps="true"
                    android:background="@drawable/buttun"
                    android:id="@+id/backbt"/>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="ESMT"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/dancing_bold"
                android:layout_marginTop="50dp"
                android:textSize="36sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:background="@drawable/round_border">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nom et Prenom"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:textSize="25dp"
                    android:textColor="@color/black"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:drawableStart="@drawable/baseline_man_24"
                    android:drawablePadding="8dp"
                    android:hint="Nom et prenom"
                    android:textColorHint="@color/teal_700"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Telephone"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:textSize="25dp"
                    android:textColor="@color/black"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:drawableStart="@drawable/baseline_call_24"
                    android:drawablePadding="8dp"
                    android:hint="Numero"
                    android:textColorHint="@color/teal_700"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Adresse mail"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:textSize="25dp"
                    android:textColor="@color/black"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:drawableStart="@drawable/baseline_man_24"
                    android:drawablePadding="8dp"
                    android:hint="email"
                    android:textColorHint="@color/teal_700"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mot de passe"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:textSize="25dp"
                    android:textColor="@color/black"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:drawableStart="@drawable/baseline_lock_24"
                    android:drawablePadding="8dp"
                    android:hint="Password"
                    android:textColorHint="@color/teal_700"
                    android:textSize="16sp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="S'inscrire"
                    android:backgroundTint="@color/buttun_color"
                    android:padding="10dp"
                    android:textSize="19dp"
                    android:fontFamily="@font/dm_medium"
                    android:textAllCaps="true"
                    android:background="@drawable/buttun"
                    android:id="@+id/inscrirebt"/>





            </LinearLayout>




        </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>